<mui:MetroWindow x:Class="xelvor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="clr-namespace:AiP.Metro"
        xmlns:local="clr-namespace:xelvor.Controls"
        Title="xelvor" Height="350" Width="525" 
        Background="#FF353535" TitleBorderBrush="#FF8CBF26" TitleBrush="#FF1BA1E2" ResizeMode="CanResize" Loaded="Window_Loaded" >
    <mui:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/xelvor;component/xelvor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mui:MetroWindow.Resources>
    
    <Grid>
        <local:Console2 x:Name="idtor"
                        Background="#353535"
                        Foreground="#EEE"
                        HorizontalAlignment="Stretch" 
                        Margin="5" 
                        VerticalAlignment="Stretch"
                        TextWrapping="Wrap"
                        HorizontalScrollBarVisibility="Hidden" />
    </Grid>
</mui:MetroWindow>
